<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_autosave_key"
        android:title="@string/pref_title_autosave_locale" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_notification_key"
        android:title="@string/pref_title_send_notification" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/sort_entries"
        android:entryValues="@array/sort_values"
        android:key="@string/pref_sort_key"
        android:summary="@string/pref_sort_summary"
        android:title="@string/pref_sort_buoy_list" />

</PreferenceScreen>
